{
  "name": "@andre-gra/oryx-ui",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "A React component library with intelligent theming based on Radix UI primitives",
  "author": "andre-gra",
  "license": "MIT",
  "keywords": [
    "react",
    "ui",
    "components",
    "radix-ui",
    "theming",
    "tailwindcss",
    "ai-theming"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andre-gra/oryx-ui"
  },
  "homepage": "https://github.com/andre-gra/oryx-ui",
  "main": "./dist/oryx-ui.umd.cjs",
  "module": "./dist/oryx-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/oryx-ui.js",
      "require": "./dist/oryx-ui.umd.cjs"
    },
    "./styles": {
      "import": "./dist/oryx.css",
      "require": "./dist/oryx.css"
    },
    "./styles.css": "./dist/oryx.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite --config vite.demo.config.ts",
    "build:lib": "tsc -p tsconfig.build.json && vite build",
    "build:demo": "vite build --outDir dist-demo --config vite.demo.config.ts",
    "build": "npm run build:lib && npm run build:demo",
    "lint": "oxlint",
    "preview": "vite preview",
    "preview:demo": "vite preview --config vite.demo.config.ts",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/react-popover": "1.0.6",
    "@radix-ui/react-select": "^1.2.2",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@radix-ui/colors": "^1.0.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/node": "^24.10.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "postcss": "^8.4.24",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-simple-vars": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animated": "^1.0.1",
    "tw-colors": "^1.2.6",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.9.1"
  }
}
